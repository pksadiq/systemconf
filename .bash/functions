# -*- mode: shell-script; -*-

mynetip ()
{
    ROUTES="$(ip route show 2>/dev/null)"

    if [ -z "${ROUTES}" ]
    then
	echo "No Route found"
	exit 1
    fi

    # Get public IP address. 208.67.222.222 is IP of "resolver1.opendns.com"
    # IP used to not rely on local DNS resolution
    dig +short myip.opendns.com @208.67.222.222
}
