#!/bin/bash

if [ "$OSTYPE" != "linux-gnu" ]
then
   echo "Sorry, You require GNU/Linux OS to proceed"
   echo "Exiting.."
   exit 1
fi

HOME_DIR="${HOME}"
SCRIPT_DIR="$(pwd)"

# Create user specific theme and icon paths
mkdir -p "${HOME_DIR}/.local/share/themes"
mkdir -p "${HOME_DIR}/.local/share/icons"

# Common functions used throughout the script
. "${SCRIPT_DIR}"/scripts/functions.sh

# Settings that can be configured by the user
. "${SCRIPT_DIR}"/settings.sh

# Settings to set on GNOME 3 Desktop Environment
. "${SCRIPT_DIR}"/scripts/gsettings.sh
